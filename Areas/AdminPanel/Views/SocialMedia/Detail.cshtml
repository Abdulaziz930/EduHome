
@{
    ViewData["Title"] = "Social Media Detail";
    SocialMedia socialMedia = Model;
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Social Media Detail</h3>
                <h4>Teacher Name: @socialMedia.Teacher.Name</h4>
                <div class="detailItem d-flex mt-3">
                    <h4>Icon:</h4>
                    <span class="ml-2">@socialMedia.Icon</span>
                </div>
                <div class="detailItem d-flex mt-3">
                    <h4>Link:</h4>
                    <span class="ml-2">@socialMedia.Link</span>
                </div>
                <hr />
                <a asp-action="Index" class="btn btn-info text-light my-button">
                    <i class="mdi mdi-keyboard-backspace"></i> <span>Back</span>
                </a>
            </div>
        </div>
    </div>
</div>

