
@{
    ViewData["Title"] = "Delete Social Media";
    SocialMedia socialMedia = Model;
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Delete Social Media</h4>
            <h4>Teacher Name: @socialMedia.Teacher.Name</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="item d-flex mt-2">
                        <h4>Icon:</h4>
                        <span class="ml-2">@socialMedia.Icon</span>
                    </div>
                    <div class="item d-flex mt-2">
                        <h4>Link:</h4>
                        <span class="ml-2">@socialMedia.Link</span>
                    </div>
                </div>
            </div>
            <p class="text-danger mt-3">Do you want to delete?</p>
            <hr />
            <form method="post">
                <a asp-action="Index" class="btn btn-primary">Go Back</a>
                <button type="submit" class="btn btn-danger ml-2">Delete</button>
            </form>
        </div>
    </div>
</div>
