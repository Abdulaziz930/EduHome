
@{
    ViewData["Title"] = "Detail";
    Blog blog = Model;
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Blog Detail</h3>
                <div class="row">
                    <div class="col-md-12">
                        <img src="~/img/blog/@blog.Image" class="img-fluid" />
                    </div>
                    <div class="col-md-12">
                        <div class="detailItem d-flex mt-2">
                            <h4>Title:</h4>
                            <span class="ml-2">@blog.Title</span>
                        </div>
                        <div class="detailItem d-flex mt-3">
                            <h4>Description:</h4>
                            <span class="ml-2">@Html.Raw(blog.BlogDetail.Description)</span>
                        </div>
                        <div class="detailItem d-flex mt-3">
                            <h4>Leave Reply:</h4>
                            <span class="ml-2">@Html.Raw(blog.BlogDetail.LeaveReply)</span>
                        </div>
                    </div>
                </div>
                <hr />
                <a asp-action="Index" class="btn btn-info text-light my-button">
                    <i class="mdi mdi-keyboard-backspace"></i> <span>Back</span>
                </a>
            </div>
        </div>
    </div>
</div>

