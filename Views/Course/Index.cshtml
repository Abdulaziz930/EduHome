
@{
    ViewData["Title"] = "Courses";
}

@await Component.InvokeAsync("Banner","courses")
<!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form">
                    <form id="search" action="#">
                        <input type="search" placeholder="Search..." name="search" />
                        <button type="submit">search</button>
                    </form>
                </div>
            </div>
        </div>
        @await Component.InvokeAsync("Course",new EduHome.ViewComponents.InvokeRequest() { Count = 9, SkipCount = ViewBag.Page })
        <div class="row">
            <div class="col-xs-12">
                <div class="pagination">
                    <ul>
                        @for (int i = 1; i <= ViewBag.PageCount; i++)
                        {
                            if (ViewBag.Page == i)
                            {
                                <li><a disabled asp-action="Index" asp-route-page="@i">@i</a></li>
                            }
                            else
                            {
                                <li><a asp-action="Index" asp-route-page="@i">@i</a></li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Course End -->
