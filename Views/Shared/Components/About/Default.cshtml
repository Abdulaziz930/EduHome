
@{
    Layout = null;
    About about = Model;
}

<!-- About Start -->
<div class="about-area pb-155 mt-30">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    <h2>@Html.Raw(about.Title)</h2>
                    @Html.Raw(about.Description)
                    <a class="default-btn" asp-controller="About" asp-action="Index">view courses</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="~/img/about/@about.Image" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->