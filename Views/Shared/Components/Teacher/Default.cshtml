
@{
    Layout = null;
    List<Teacher> teachers = Model;
}

<div class="row">
    @foreach (var teacher in teachers)
    {
        <div class="col-md-3 col-sm-4 col-xs-12">
            <div class="single-teacher">
                <div class="single-teacher-img">
                    <a href="teacher-details.html"><img src="img/teacher/@teacher.Image" alt="teacher"></a>
                </div>
                <div class="single-teacher-content text-center">
                    <h2><a href="teacher-details.html">@teacher.Name</a></h2>
                    <h4>@teacher.TeacherProfessions.FirstOrDefault().Profession.Name</h4>
                    <ul>
                        @foreach (var socialMedia in teacher.SocialMedias)
                        {
                            if(socialMedia.IsDeleted == false)
                            {
                                <li><a href="@socialMedia.Link"><i class="@socialMedia.Icon"></i></a></li>  
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
</div>