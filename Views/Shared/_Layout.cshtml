<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Eduhome - @ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="apple-touch-icon.png">

    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/css/meanmenu.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/et-line-icon.css">
    <link rel="stylesheet" href="~/css/reset.css">
    <link rel="stylesheet" href="~/css/ionicons.min.css">
    <link rel="stylesheet" href="~/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/backend.css" asp-append-version="true">
    <script src="~/js/vendor/modernizr-2.8.3.min.js"></script>
</head>
<body>
    <!-- Header Area Start -->
    @await Component.InvokeAsync("Header")
    <!-- Header Area End -->
    <main>
        @RenderBody()
    </main>
    <!-- Footer Start -->
    <!-- Subscribe Start -->
    <div class="subscribe-area pt-60 pb-70">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="subscribe-content section-title text-center">
                        <h2>subscribe our newsletter</h2>
                        <p>I must explain to you how all this mistaken idea </p>
                    </div>
                    <div class="newsletter-form mc_embed_signup">
                        <form id="subscribe-form" name="mc-embedded-subscribe-form" class="validate" novalidate>
                            <div id="mc_embed_signup_scroll" class="mc-form">
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <input type="email" value="" name="EMAIL" class="email" id="Email-Subscribe" placeholder="Enter your e-mail address" required>
                                }
                                <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                                <button id="Subscribe-Button" class="default-btn" type="button" name="subscribe"><span>subscribe</span></button>
                            </div>
                        </form>
                        <div style="text-align:center;color:red !important;" id="response-subscribe"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Subscribe End -->
    @await Component.InvokeAsync("Footer")
    <!-- Footer End -->

    <script src="~/js/vendor/jquery-1.12.0.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.meanmenu.js"></script>
    <script src="~/js/jquery.magnific-popup.js"></script>
    <script src="~/js/ajax-mail.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.mb.YTPlayer.js"></script>
    <script src="~/js/jquery.nicescroll.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/js/backend.js" asp-append-version="true"></script>

    @if (User.Identity.IsAuthenticated)
    {
        <script>
            var isAuthenticated = true;
        </script>
    }
    else
    {
        <script>
            var isAuthenticated = false;
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
